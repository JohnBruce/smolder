[% SET page_title = "Admin - Developers" %]

<h2>Details of '[% developer.username %]'</h2>

<div class="sub_menu">
    <a class="sub_menu" href="/app/admin_developers/edit/[% developer.id %]">Edit</a>
    <a class="sub_menu" href="/app/admin_developers/reset_pw/[% developer.id %]">Reset Password</a>
    <a class="sub_menu" href="/app/admin_developers/add">Add New Developer</a>
    <a class="sub_menu" href="/app/admin_developers/list">All Developers</a>
</div>

[% IF add %]
    <p class="warn">New developer successfully created.</p>
[% ELSIF edit %]
    <p class="warn">Developer successfully updated.</p>
[% ELSIF reset_pw %]
    <p class="warn">Password successfully reset.</p>
[% END %]

<table class="boxed">
<tr class="even">
  <td><label>Developer Name</label></td>
  <td>[% developer.fname %] [% developer.lname %]</td>
</tr>
<tr>
  <td><label>Email</label></td>
  <td>[% developer.email %]</td>
</tr>
<tr class="even">
  <td><label>Admin?</label></td>
  <td>[% IF developer.admin %]yes[% ELSE %]no[% END %]</td>
</tr>
<tr>
  <td valign="top"><label>Projects</label></td>
  <td valign="top">
    [% IF developer.projects %]
        [% FOREACH project IN developer.projects %]
            <a href="/app/admin_projects/details/[% project.id %]">[% project.name %]</a>
            [% UNLESS loop.last() %],[% END %]
        [% END %]
    [% ELSE %]
        <em>none</em>
    [% END %]
  </td>
</tr>
</table>

