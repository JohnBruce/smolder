[% PROCESS form_header.tmpl %]

[% IF c.dfv_msgs.invalid_unique_developer_username || err_unique_id || c.dfv_msgs.invalid_email %]
<ul>
  [% IF c.dfv_msgs.invalid_unique_developer_username || err_unique_id %]
  <li><em class="warn">A developer with that username already exists.</em></li>
  [% END %]
  [% IF c.dfv_msgs.invalid_email %]
  <li><em class="warn">Not a valid email address!</em></li>
  [% END %]
</ul>
[% END %]

<form class="ajaxable for_crud_add_container show_indicator" name="edit" action="/app/admin_developers/process_edit/[% developer.id %]" method="post">

<table class="boxed crud">
<tr><td colspan="4" class="header2">Edit Developer</td></tr>
<tr>
  <td><label class="required[% IF c.dfv_msgs.err_username || err_unique_username %] warn[% END %]">Username</label></td>
  <td><input class="first hl" type="text" name="username" size="25" /></td>
  <td><label class="required[% IF c.dfv_msgs.err_email %] warn[% END %]">Email Address</label></td>
  <td><input class="hl" type="text" name="email" size="25" /></td>
</tr>
<tr>
  <td><label class="required[% IF c.dfv_msgs.err_fname %] warn[% END %]">First Name</label></td>
  <td><input class="hl" type="text" name="fname" size="25" /></td>
  <td><label class="required[% IF c.dfv_msgs.err_lname %] warn[% END %]">Last Name</label></td>
  <td><input class="hl" type="text" name="lname" size="25" /></td>
</tr>
<tr>
  <td><label class="required[% IF c.dfv_msgs.err_admin %] warn[% END %]">Site Admin?</label></td>
  <td>
    <input type="radio" name="admin" value="1"> Yes
    <input type="radio" name="admin" value="0"> No
  </td>
  <td colspan="2" align="right">
      <img src="/images/indicator.gif" style="display:none" class="indicator" id="indicator" alt="loading" />
      <input type="button" id="crud_edit_cancel" value="Cancel" />
      <input type="submit" value="Update" />
  </td>
</tr>
</table>
</form>
