[% IF developers %]
<table class="boxed crud">
<tr class="header">
  <td>Username</td>
  <td>Name</td>
  <td>Email</td>
  <td>Admin</td>
  <td>Edit</td>
  <td>Reset Password</td>
  <td>Delete</td>
</tr>
[% FOREACH developer IN developers %]
  <tr class="[% IF loop.count % 2 == 0 %]even[% ELSE %]odd[% END %]">
    <td width="100px">[% developer.username | html %]</td>
    <td width="180px">[% IF developer.lname %][% developer.lname | html %], [% END %][% developer.fname | html %]</td>
    <td width="100px">[% developer.email | html %]</td>
    <td width="80px">[% IF developer.admin %]Yes[% ELSE %]No[% END %]</td>
    <td width="50px"><a href="/app/admin_developers/edit/[% developer.id %]" class="crud_edit_trigger for_item_[% developer.id %]" id="crud_edit_[% developer.id %]">[Edit]</a></td>
    <td width="110px">
      <a href="#" class="popup_form" id="resetpw_developer_[% developer.id %]_trigger">[Reset Password]</a>
      <div id="resetpw_developer_[% developer.id %]" class="popup_form" style="display: none; position: absolute">
        <form class="resetpw_form show_crud_indicator for_crud_add_container" id="resetpw_developer_[% developer.id %]_form" name="resetpw_[% developer.id %]" action="/app/admin_developers/reset_pw/[% developer.id %]" method="post">
        Resetting the Developer's password will remove their old one and create a new
        random password and email this password to the developer.<br />
        Are you sure this is what you want?
        <input type="submit" value="Yes">
        </form>
      </div>
    </td>
    <td width="60px">
      <a href="#" class="popup_form" id="delete_developer_form_[% developer.id %]_trigger">[Delete]</a>
      <div id="delete_developer_form_[% developer.id %]" class="popup_form" style="display: none; position: absolute">
        <form class="ajaxable show_indicator_[% developer.id %]" name="delete_[% developer.id %]" action="/app/admin_developers/delete/[% developer.id %]" method="post">
        Upon deletion, all information about this project will be removed.<br />
        Are you sure this is what you want?
        <input type="submit" value="Yes">
        <img src="/images/indicator.gif" style="display:none" class="indicator" id="indicator_[% developer.id %]" alt="loading" />
        </form>
      </div>
    </td>
  </tr>
[% END %]
</table>
[% ELSE %]
  <p>No Developers currently exist</p>
[% END %]
